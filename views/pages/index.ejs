<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head"); %>
<body>
    <%- include("../partials/nav")%>

    <div class="overlay" data-overlay></div>
<!--
    - MODAL
  -->
  <div class="modal" data-modal>

    <div class="modal-close-overlay" data-modal-overlay></div>

    <div class="modal-content">

      <button class="modal-close-btn" data-modal-close>
        <i class="fa-solid fa-xmark"></i>
      </button>

      <div class="newsletter-img">
        <img src="./assets/imgs/modal.jpg" alt="subscribe newsletter" width="400" height="400">
      </div>

      <div class="newsletter">

        <form action="#">

          <div class="newsletter-header">

            <h3 class="newsletter-title">Welcome To Spend!</h3>

            <p class="newsletter-desc">
              Subscribe to our newsletter now and receive exclusive discounts and offers directly in your inbox. All you have to do is enter your email address in the form below and click "Subscribe".
            </p>

          </div>

          <input type="email" name="email" class="email-field" placeholder="Enter Email Address" required>

          <button type="submit" class="btn-newsletter">Subscribe</button>

        </form>

      </div>

    </div>

  </div>

<!--
    - NOTIFICATION TOAST
  -->

  <div class="notification-toast" data-toast>

    <button class="toast-close-btn" data-toast-close>
      <i class="fa-solid fa-xmark"></i>
    </button>

    <div class="toast-banner">
      <img src="./assets/imgs/nike_huarache.png" alt="Nike Huarache" width="80" height="70">
    </div>

    <div class="toast-detail">

      <p class="toast-message">
        Someone in new just bought
      </p>

      <p class="toast-title">
        Nike Huarache
      </p>

      <p class="toast-meta">
        <time datetime="PT2M">2 Minutes</time> ago
      </p>

    </div>

  </div>

    
    <!-- <div class="hero-section"> -->
        <div class="hero-section">
            <img class="img1" src="assets/imgs/hero1.jpg" alt="">
            <img class="img2" src="assets/imgs/hero3.jpg" alt="">
        </div>        
    <!-- </div> -->


        <!--
      - CATEGORY
    -->

    <!-- Popular Now -->

    <div class="category">
        <h2>Popular Now</h2>

        <div class="container">
  
          <div class="category-item-container has-scrollbar">
  
            <div class="category-item">
  
              <div class="category-img-box">
                <img src="./assets/imgs/vans.png" class="sImg1" alt="dress & frock">
              </div>
  
              <div class="category-content-box">
  
                <div class="category-content-flex">
                  <h3 class="category-item-title">Vans</h3>
                  <p>GH₵ 50</p>
                </div>
  
              </div>
  
            </div>
  
            <div class="category-item">
  
              <div class="category-img-box">
                <img src="./assets/imgs/nike.png" class="sImg2" alt="winter wear" width="30">
              </div>
  
              <div class="category-content-box">
  
                <div class="category-content-flex">
                  <h3 class="category-item-title">Nike Huarache</h3>
                  <p>GH₵ 100</p>
                </div>
  
              </div>
  
            </div>
  
            <div class="category-item">
  
              <div class="category-img-box">
                <img src="./assets/imgs/hoodie.png" class="sImg4" alt="shorts & jeans" width="30">
              </div>
  
              <div class="category-content-box">
  
                <div class="category-content-flex">
                  <h3 class="category-item-title">Hoodie</h3>
                  <p>GH₵ 40</p>
                </div>
  
              </div>
  
            </div>
  
            <div class="category-item">
  
              <div class="category-img-box">
                <img src="./assets/imgs/watch.png" class="sImg5" alt="t-shirts" width="30">
              </div>
  
              <div class="category-content-box">
  
                <div class="category-content-flex">
                  <h3 class="category-item-title">Watch</h3>
                  <p>GH₵ 20</p>
                </div>
  
              </div>
  
            </div>
  
            <div class="category-item">
  
              <div class="category-img-box">
                <img src="./assets/imgs/jacket.png" class="sImg6" alt="jacket" width="30">
              </div>
  
              <div class="category-content-box">
  
                <div class="category-content-flex">
                  <h3 class="category-item-title">Jacket</h3>
                  <p>GH₵ 80</p>
                </div>
  
              </div>
  
            </div>

            <div class="category-item">
  
              <div class="category-img-box">
                <img src="./assets/imgs/nike_huarache.png" class="sImg3" alt="glasses & lens" width="30">
              </div>
  
              <div class="category-content-box">
  
                <div class="category-content-flex">
                  <h3 class="category-item-title">Converse</h3>
                  <p>GH₵ 60</p>
                </div>
  
              </div>
  
            </div>
  
            <div class="category-item">
  
              <div class="category-img-box">
                <img src="./assets/imgs/cap.png" class="sImg7" alt="watch" width="30">
              </div>
  
              <div class="category-content-box">
  
                <div class="category-content-flex">
                  <h3 class="category-item-title">Baseball Cap</h3>
                  <p>GH₵ 30</p>
                </div>
  
              </div>
  
            </div>
  
            <div class="category-item">
  
              <div class="category-img-box">
                <img src="./assets/imgs/tshirts.png" class="sImg8" alt="hat & caps" width="30">
              </div>
  
              <div class="category-content-box">
  
                <div class="category-content-flex">
                  <h3 class="category-item-title">3 in 1 Tshirts</h3>
                  <p>GH₵ 90</p>
                </div>
  
              </div>
  
            </div>
  
          </div>
  
        </div>
  
      </div>

      <!-- Products -->
      <div class="product">
          <h2>Products</h2>
          <% products.forEach((product) { %>
          <div class="card">
            <img src=<%= product.imageURL %> alt="Product Image">
            <h3><%= product.title %></h3>
            <div class="price-cart">
              <p class="price">$<%= product.price %></p>
              <button class="add-to-cart"><i class="fa-solid fa-cart-plus"></i>Add to Cart</button>
            </div>
          </div>
        <% }); %>
      </div>
      <!-- Products -->
      
      <%- include("../partials/footer")%>

      <script src="./assets/main/script.js" type="text/javascript"></script>
</body>
</html>